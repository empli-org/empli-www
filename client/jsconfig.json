{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist", "**/dist/*"],
  "include": ["src/**/*"]
}
